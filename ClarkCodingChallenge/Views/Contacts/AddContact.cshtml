@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model ClarkCodingChallenge.Entities.Contact
@{
    ViewData["Title"] = "Add Contact";
}

<div class="row text-center">
    <form asp-controller="Contacts" asp-action="AddContact" method="post">
        <div>
            <label for="lastName">Last Name</label>
            <input asp-for="LastName" type="text" id="lastName" name="LastName" required />
            <span asp-validation-for="LastName"></span>
        </div>

        <div>
            <label for="firstName">First Name</label>
            <input asp-for="FirstName" type="text" id="firstName" name="FirstName" required />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div>
            <label for="email">Email</label>
            <input asp-for="Email" type="email" id="email" name="Email"/>
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>